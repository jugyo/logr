.entry
  %h2
    - if entry[:title] && !entry[:title].empty?
      %a{:href => "/entries/#{entry[:key]}"}= entry[:title]
    - else
      %a{:href => "/entries/#{entry[:key]}"}= entry[:key][0..8] + '...'

  .entry_body= entry[:body]

  .entry_status= entry[:updated_at]
  - if logged_in?
    .entry_actions
      %a{:href => "/entries/#{entry[:key]}/edit"} edit
